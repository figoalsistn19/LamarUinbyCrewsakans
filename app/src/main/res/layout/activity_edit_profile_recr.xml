<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.recruiter.profile.EditProfileRecrActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tbDaftarTransaksi"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/purple_500"
                android:minHeight="?attr/actionBarSize"
                android:orientation="horizontal"
                android:theme="?attr/actionBarTheme">
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="Edit Profile"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/ivProfileEdit"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="15dp"
                    tools:src="@drawable/ic_baseline_person_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/ivProfileEdit"
                    app:layout_constraintTop_toTopOf="@+id/ivProfileEdit" />

                <EditText
                    android:id="@+id/edit_nama"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Elon Musk"
                    android:layout_marginTop="5dp"
                    android:paddingVertical="3dp"
                    android:singleLine="true"
                    android:paddingHorizontal="10dp"
                    android:textSize="14sp"
                    android:background="@drawable/custom_rounded_stroke_grey"
                    app:layout_constraintStart_toStartOf="@+id/tvNama"
                    app:layout_constraintTop_toBottomOf="@+id/tvNama" />

                <TextView
                    android:id="@+id/tv_id_acc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/id_account"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/edit_nama"
                    app:layout_constraintTop_toBottomOf="@+id/edit_nama" />

                <TextView
                    android:id="@+id/edit_id_account"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="982390183"
                    android:layout_marginTop="5dp"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="10dp"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:background="@drawable/custom_rounded_stroke_grey"
                    app:layout_constraintStart_toStartOf="@+id/tv_id_acc"
                    app:layout_constraintTop_toBottomOf="@+id/tv_id_acc" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="48dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_phone_rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="Phone Number"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="1"
                tools:text="081235994544"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                android:paddingVertical="3dp"
                android:paddingHorizontal="10dp"
                android:textSize="14sp"
                android:background="@drawable/custom_rounded_stroke_grey" />

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="Company Name"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                tools:text="Tesla Inc"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                android:paddingVertical="3dp"
                android:paddingHorizontal="10dp"
                android:textSize="14sp"
                android:background="@drawable/custom_rounded_stroke_grey" />

            <TextView
                android:id="@+id/tv_company_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="Company Profile"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_company_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:maxLines="10"
                android:minLines="3"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla ligula enim, varius et tortor finibus, vehicula viverra sem. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla ligula enim, varius et tortor finibus, vehicula viverra sem. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla ligula enim, varius et tortor finibus, vehicula viverra sem."
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                android:paddingVertical="3dp"
                android:paddingHorizontal="10dp"
                android:textSize="14sp"
                android:background="@drawable/custom_rounded_stroke_grey" />

            <TextView
                android:id="@+id/tv_company_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="Company Address"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_company_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="top"
                android:maxLines="2"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla ligula enim, varius et tortor finibus, vehicula viverra sem. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla ligula enim, varius et tortor finibus, vehicula viverra sem."
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                android:paddingVertical="3dp"
                android:paddingHorizontal="10dp"
                android:textSize="14sp"
                android:background="@drawable/custom_rounded_stroke_grey" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Save"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/custom_btn_rounded"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>
